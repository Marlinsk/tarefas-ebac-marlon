<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="mod36PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.example.project.domain.entities.Cliente</class>
        <class>org.example.project.domain.entities.Produto</class>
        <class>org.example.project.domain.entities.Estoque</class>
        <class>org.example.project.domain.entities.Carrinho</class>
        <class>org.example.project.domain.entities.CarrinhoItem</class>
        <class>org.example.project.domain.entities.Venda</class>
        <class>org.example.project.domain.entities.NotaFiscal</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ebac-courses-java-backend"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <!-- For tests -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
